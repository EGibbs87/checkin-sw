<div id="login">
  <%= simple_form_for(:user, :url => session_path(:user) ) do |f| %>
    <ul>
      <li>
        <div class='row'>
          <div class='col s6 input-field'>
            <label for="user_name" class="active">Username</label>
            <%= f.text_field :email, id: 'user_name', class: "validate", type: "text", autofocus: 'true' %>
          </div>
          <div class='col s6 input-field'>
            <label for='password' id='password-label' class="active">Password</label>
            <%= f.password_field :password, id: 'password', class: 'validate', type: 'password' %>
          </div>
        </div>
        <button class="btn blue waves-effect waves-light" type="submit" name="action" id='home-submit-page'>Login
          <i class="mdi-content-send right"></i>
        </button>
      </li>
    </ul>
  <% end %>
</div>